#ifndef LINEAR_CONTAINER_H_
#define LINEAR_CONTAINER_H_
#ifdef __cplusplus
extern "C" {
#endif
struct _linear_container;
typedef struct _linear_container linear_container_s;
typedef ret_e (*linear_container_insert)(linear_container_s* thiz, size_t index, void* data);

typedef ret_e (*linear_container_prepend)(linear_container_s* thiz, void* data);
typedef ret_e (*linearContainerAppend)(linear_container_s* thiz, void* data);
typedef ret_e (*LinearContainerDelete)(linear_container_s* thiz, size_t index);
typedef ret_e (*LinearContainerGetByIndex)(linear_container_s* thiz, size_t index, void** data);
typedef ret_e (*LinearContainerSetByIndex)(linear_container_s* thiz, size_t index, void* data);
typedef size_t (*LinearContainerLength)(linear_container_s* thiz);
typedef int    (*LinearContainerFind)(linear_container_s* thiz, data_compare_func cmp, void* ctx);
typedef ret_e    (*LinearContainerForeach)(linear_container_s* thiz, data_visit_func visit, void* ctx);
typedef void   (*LinearContainerDestroy)(linear_container_s* thiz);

struct _linear_container
{
	linear_container_insert insert;
	linear_container_prepend prepend;
	linear_container_append append;
}
#ifdef __cplusplus
}
#endif
#endif /* LINEAR_CONTAINER_H_ */
